    <link href="~/Content/Eixo/CadastroEixo.min.css" rel="stylesheet" />
}

@section Scripts {

    <script>
        var urlSalvarCursos = "@Url.Action("SalvarCursos", "Eixo")";
        var urlSalvarDisciplinas = "@Url.Action("SalvarDisciplinas", "Eixo")";
        var urlSalvarHabilidades = "@Url.Action("SalvarHabilidades", "Eixo")";
