@model IEnumerable<SLCONSTRUCT.UI.WEB.ViewModels.DescritorVModel>
<div class="modal-header">
    <p class="titulo-modal">Macrodesafio > Habilidade </p>
</div>
<div class="modal-content">
    <div class="col l12 input-title">
        <ul class="collapsible" data-collapsible="accordion">

            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {

                    <li>
                        <div class="collapsible-header descritor-pai-macro" data-coddescritor="@item.codigodescritor" data-codbaseunidadeaprendizagem="@item.codbaseunidadeaprendizagem">@item.descritor</div>
                        <div class="collapsible-body">

                            <table id="" class="striped z-depth-1">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th>Descrição</th>
                                        <th class="right"></th>
                                    </tr>
                                </thead>

                                <tbody>

                                   

                                </tbody>
                            </table>

                        </div>
                    </li>
                }
            }
            else
            {
                <li>
                    <div class="collapsible-header">Sem descritor</div>
                </li>
            }

        </ul>
    </div>

</div>
<div class="modal-footer">
    <div class="col s6">
        <a href="#!" class="modal-action modal-close waves-effect btn-flat">Fechar</a>
    </div>
    <div class="col s6">
        <a href="#!" class="modal-action modal-close waves-effect btn-flat">Salvar</a>
    </div>
</div>
