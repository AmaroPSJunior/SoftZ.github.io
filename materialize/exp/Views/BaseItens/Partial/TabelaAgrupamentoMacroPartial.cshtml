@model IEnumerable<SLCONSTRUCT.UI.WEB.ViewModels.HabilidadeVModel>
<span class="input-title-div">Macrodesafio</span>
<table id="tabela-de-macros" class="striped z-depth-1">
    <thead>
        <tr>
            <th>Habilidade</th>
            <th>qtd</th>
            <th class="right"><i class="fas fa-plus abre-modal-macro" title="Adicionar" aria-hidden="true"></i></th>
        </tr>
    </thead>

    <tbody>
        @if(Model.Count() > 0)
        {
            foreach (var item in Model)
            {
            <tr @item.codbaseunidadeaprendizagem>
                <td class="habilidade" data-codhabilidade="@item.codhabilidade">@item.habilidade</td>
                <td>@item.qtd</td>
                <td class="right"></td>
            </tr>
            }
        }
        else {
            <tr>
                <td>Nada cadastrado</td>
                <td>0</td>
                <td></td>
            </tr>
        }

    </tbody>
</table>
