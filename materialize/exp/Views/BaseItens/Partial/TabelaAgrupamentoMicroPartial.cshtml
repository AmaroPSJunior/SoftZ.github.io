@model IEnumerable<SLCONSTRUCT.UI.WEB.ViewModels.HabilidadeVModel>

<span class="input-title-div">Microdesafio</span>
<table id="tabela-de-micros" class="striped z-depth-1">
    <thead>
        <tr>
            <th class="habilidade">habilidade</th>
            <th>qtd</th>
            <th class="right"><i class="fas fa-plus abre-modal-micro" title="Adcionar" aria-hidden="true"></i></th>
        </tr>
    </thead>

    <tbody>

        @if (Model.Count() > 0)
        {

            foreach (var item in Model)
            {
                <tr @item.codbaseunidadeaprendizagem>
                    <td class="habilidade" data-codhabilidade="@item.codhabilidade">@item.habilidade</td>
                    <td>@item.qtd</td>
                    <td></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>Nada cadastrado</td>
                <td>0</td>
                <td></td>
            </tr>
        }

    </tbody>
</table>
