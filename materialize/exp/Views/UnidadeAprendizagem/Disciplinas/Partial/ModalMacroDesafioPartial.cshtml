@model  SLCONSTRUCT.UI.WEB.ViewModels.ListagemDesafioUAVModel
<script>
    var qtdQuestoes = @Model.qtdquestoes;
</script>
@Html.HiddenFor(x => x.coddesafio)
@Html.HiddenFor(x => x.codunidadeaprendizagemtrilha)

<div class="modal-header">
    <span class="modal-close-default-sl modal-close">fechar <i class="far fa-window-close"></i></span>
</div>
<div class="macro-modal-content">
    <div class="row container-descritores lista-disciplina">
        <div class="col s12">
            <h4 class="nome-microdesafio">Macrodesafio 01</h4>

            @if (Model.listagemDescritoresHabilidade != null && Model.listagemDescritoresHabilidade.Count() > 0)
            {
                <ul class="collapsible lista-disciplina--collapsible" data-collapsible="accordion">

                    @for (var i = 0; i < Model.listagemDescritoresHabilidade.Count(); i++)
                    {
                        <li>
                            <div class="check-descritor">
                                <div class="check hide">
                                    <input type="checkbox" class="checkbox-enunciado filled-in" id="@Model.listagemDescritoresHabilidade[i].Value" />
                                    <label for="@Model.listagemDescritoresHabilidade[i].Value"></label>
                                </div>
                            </div>
                            <div class="collapsible-header" data-codhabilidade="@Model.listagemDescritoresHabilidade[i].Value" data-quantidadeQuestoesTotal="@Model.listagemDescritoresHabilidade[i].quantidadeQuestoesTotal" data-quantidadeQuestoesSelecionadas="@Model.listagemDescritoresHabilidade[i].quantidadeQuestoesSelecionadas">
                                @Model.listagemDescritoresHabilidade[i].Text
                                <i class="fas fa-chevron-down"></i>

                            </div>
                            <div class="collapsible-body">

                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <h5>Não há disciplinas disponíveis para cadastro do Macrodesafio</h5>
            }
        </div>
    </div>

    <div class="center">
        <button class="btn waves-effect waves-light salvar">Salvar</button>
    </div>
</div>

