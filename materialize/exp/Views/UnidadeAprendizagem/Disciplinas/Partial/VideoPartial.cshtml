@model  IEnumerable<SLCONSTRUCT.UI.WEB.ViewModels.VideoVModel>

@using (Html.BeginForm("", "", FormMethod.Post, new { data_js = "form-validate", id = "frmCadastroUnidadeAprendizagemVideo", data_url = Url.Action("", "") }))
{
    <div id="video-partial" class="bloco-conteudo-padrao">
        <div class="titulo-section">
            <i class="fas fa-video icon-padrao-fa5"></i>
            <h2 class="sl-titulo-default">
                VÍDEOS - SELECIONE UM OU MAIS VÍDEOS PARA ESTA UNIDADE. OBS .: OS VÍDEOS NÃO ESTÃO DISPONÍVEIS PARA CONSULTA NO PACOTE DA BASE DE ITENS RELACIONADA
            </h2>
        </div>
        <div class="container-video-partial-macro">
            <div class="container-video center">
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        string check = item.selecionado ? "checked" : "";
                        <div class="container-video--box">
                            <input type="checkbox" id="@item.codconteudo" class="filled-in" @check />
                            <label for="@item.codconteudo" data-url="@item.url" data-codarquivo="@item.codconteudo" data-possuianexo="@item.possuianexo" data-titulo="@item.titulo"></label>
                            <i class="fas fa-eye visualiza"></i>
                            <img class="video-imagem" id="" src="" alt="" />
                        </div>
                    }
                }
                else
                {
                    <div class="aviso center">
                        <h6 class="aviso--msg">
                            Nenhum vídeo cadastrado.
                        </h6>
                    </div>
                }
            </div>
            <div class="arquivo-section">
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model.Where(x => x.selecionado))
                    {
                        <div><i class="fas fa-check"></i><h2 class="sl-titulo-default sl-navy-blue" data-codarquivo="@item.codconteudo">@item.titulo</h2></div>
                    }
                }
            </div>
            <div class="center botao-salvar">
                <button type="button" class="btn waves-effect waves-light salvar">salvar</button>
            </div>
        </div>
    </div>
}

<!-- Modal Structure -->
<div id="player" class="modal default-sl-blue modal-fixed-footer">
    <div class="modal-header">
        <span class="modal-close-default-sl modal-close">fechar <i class="far fa-window-close"></i></span>
    </div>
    <div class="modal-content">

    </div>
    <div class="modal-footer hide">
        <button class="btn waves-effect waves-light right download-anexo" style="margin-right: 1rem;"><i class="fas fa-cloud-download-alt" style="margin-right: .7rem;"></i>Anexo</button>
    </div>
</div>
