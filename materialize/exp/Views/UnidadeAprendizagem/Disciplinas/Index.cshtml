    <script>
        var urlObterListaDisciplinaGrid = "@Url.Action("ObterListaDisciplinaGrid", "UnidadeAprendizagemLiberacao")";
        var urlListarCursos = "@Url.Action("ListarCursos", "UnidadeAprendizagemLiberacao")";
        var urlListarDisciplinas = "@Url.Action("ListarDisciplinas", "UnidadeAprendizagemLiberacao")"; 
        var CarregarLiberacaoUlr = "@Url.Action("Liberacao", "UnidadeAprendizagemLiberacao")";
        var CarregarCorrecaoUrl = "@Url.Action("Listagem", "CorrecaoMacrodesafio")";
        var urlCancelarUa = "@Url.Action("CancelarUnidadeAprendizagem", "UnidadeAprendizagemLiberacao")";
        var urlAtividadesIniciadasPelosAlunosUnidadeAprendizagem = "@Url.Action("AtividadesIniciadasPelosAlunosUnidadeAprendizagem", "UnidadeAprendizagemLiberacao")";
        var urlListarAnoSemestre = "@Url.Action("ListarAnoSemestre", "UnidadeAprendizagemLiberacao")";
